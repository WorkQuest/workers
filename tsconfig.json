{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "build",
    "allowJs": false,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "./**/*.spec.ts",
    "./**/__mocks__/*.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/quest/abi/*.json",
    "./src/quest-factory/abi/*.json",
    "./src/bridge/abi/*.json",
    "./src/proposal/abi/*.json",
    "./src/daily-liquidity/abi/*.json",
    "./src/WqtWbnb/abi/*.json",
    "./src/pension-fund/abi/*.json",
    "./src/referral/abi/*.json"
  ],
  "rootDir":  ["src"]
}
