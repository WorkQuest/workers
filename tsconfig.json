{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "build",
    "allowJs": false,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/quest/abi/*.json",
    "./src/questFactory/abi/*.json",
    "./src/bridge/abi/*.json",
    "./src/proposal/abi/*.json",
    "./src/dailyLiquidity/abi/*.json",
    "./src/WqtWbnb/abi/*.json",
    "./src/pensionFund/abi/*.json",
    "./src/referral/abi/*.json"
  ],
  "rootDir":  ["src"]
}
