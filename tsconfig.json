{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "build",
    "allowJs": false,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "lib": [
      "es2019"
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/quest-factory/abi/*.json",
    "./src/quest/abi/*.json",
    "./src/bridge/abi/*.json",
    "./src/proposal/abi/*.json",
    "./src/daily-liquidity/abi/*.json",
    "./src/Wqt-Wbnb/abi/*.json",
    "./src/Wqt-Weth/abi/*.json",
    "./src/pension-fund/abi/*.json",
    "./src/referral-program/abi/*.json",
    "./src/saving-product/abi/*.json",
    "./src/raise-view/abi/*.json",
    "./src/bridge-usdt/abi/*.json"
  ],
  "rootDir":  ["src"]
}
